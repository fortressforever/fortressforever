ps.1.1

;------------------------------------------------------------------------------
; Draw a texture . . woo hoo!
; t0 - texture
;
; The texture coordinates need to be defined as follows:
; tc0 - texcoords
; c2 - envmaptint 
;------------------------------------------------------------------------------

tex t1	; cube map
tex t2	; envmap mask

mul r0, t1, t2
mul r0.rgb, c2, r0
mul r0, r0, v0
